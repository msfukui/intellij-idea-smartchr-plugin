<idea-plugin>
    <id>com.github.msfukui.smartchr</id>
    <name>SmartChr</name>
    <vendor email="support@github.com/msfukui" url="https://github.com/msfukui">msfukui</vendor>

    <description><![CDATA[
    <p>IntelliJ IDEA plugin that provides vim-smartchr functionality.</p>
    <p>SmartChr allows you to cycle through predefined character patterns by repeatedly pressing the same key.</p>
    
    <h3>Features:</h3>
    <ul>
        <li>Cycle through multiple string candidates with a single key</li>
        <li>File type specific configurations</li>
        <li>Customizable key mappings</li>
        <li>Two modes: one_of (stop at last) and loop (cycle)</li>
    </ul>
    
    <h3>Example Usage:</h3>
    <ul>
        <li>Press '=' repeatedly: = → " = " → " == " → =</li>
        <li>Press '.' repeatedly in Java: . → -> → .</li>
        <li>Press '_' repeatedly in R: _ → " <- " → _</li>
    </ul>
    ]]></description>

    <change-notes><![CDATA[
    <h3>0.1.0</h3>
    <ul>
        <li>Initial release</li>
        <li>Basic key cycling functionality</li>
        <li>File type specific configurations</li>
        <li>Settings UI</li>
    </ul>
    ]]></change-notes>

    <!-- Plugin version -->
    <version>0.1.0</version>

    <!-- Compatible with IntelliJ IDEA 2023.1 and later -->
    <idea-version since-build="231" until-build="241.*"/>

    <!-- Plugin dependencies -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Settings Configurable -->
        <applicationConfigurable
                parentId="editor"
                instance="com.github.msfukui.smartchr.settings.SmartChrConfigurable"
                id="com.github.msfukui.smartchr.settings"
                displayName="SmartChr"/>
        
        <!-- Application Service for settings -->
        <applicationService
                serviceImplementation="com.github.msfukui.smartchr.settings.SmartChrSettings"/>
    </extensions>

    <!-- Actions -->
    <actions>
        <!-- SmartChr will be registered programmatically -->
    </actions>

    <!-- Application components -->
    <application-components>
        <component>
            <implementation-class>com.github.msfukui.smartchr.SmartChrApplicationComponent</implementation-class>
        </component>
    </application-components>
</idea-plugin>